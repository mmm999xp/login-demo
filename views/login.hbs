<form action="/login" method="post">
  <div class="d-flex  flex-column align-items-center justify-content-center mx-auto  border border-black bg-body-secondary rounded mt-3 shadow" style="width:510px;">
    <h1 class="m-5">Account Login</h1>
    <div class="mb-3" style="width:330px;">
      <label for="exampleInputEmail1" class="form-label">Email </label>
      <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3" style="width:330px;">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input type="password" name="password" class="form-control" id="exampleInputPassword1">
    </div>
    <button type="submit" class="btn btn-outline-primary m-4" style="width:200px;">Sign in</button>
  </div>
</form>
